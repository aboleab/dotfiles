" incsearch
if has("unix")
    let s:uname = system("uname -s")
    if s:uname == "Darwin\n"
    else
        set hlsearch
        let g:incsearch#auto_nohlsearch = 1
        map /  <Plug>(incsearch-forward)
    endif
endif


