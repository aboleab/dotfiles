function vim_fn() {
    common_docker_set_env "tool"
    command=" $@ "
    pwd=`pwd`
    get_home
    #command="docker run -ti -v /:/src  -v /tmp:/tmp -w /src$pwd puritys/vim /bin/bash -c \"source /root/.bash_profile ; /usr/bin/vim -p $command \""

    r=`docker ps --filter="name=puritys-vim" 2>&1 | wc -l`
    if [ "x1" == "x$r" ]; then
        docker rm puritys-vim 2>&1
        docker run -d -t  --name puritys-vim  -v /:/src -v ~/.m2:/root/.m2 -v /tmp:/tmp -w /src$pwd puritys/vim
    fi
    command="docker exec -it -w /src$pwd puritys-vim /bin/bash -c \"source /root/.bash_profile ; /usr/bin/vim -p $command\""
    echo $command
    eval $command
}

function vim_in_fn() {
    common_docker_set_env "tool"
    command=" $@ "
    pwd=`pwd`

    # Create a docker container each time
    # command="docker run -ti -v /:/src  -v /tmp:/tmp -w /src$pwd puritys/vim /bin/bash"
    r=`docker ps --filter="name=puritys-vim" 2>&1 | wc -l`
    if [ "x1" == "x$r" ]; then
        # --detach-keys 'ctrl-z'
        mkdir -p ~/docker_tmp ~/docker_tmp/fzf_session
        touch ~/docker_tmp/.bash_history

        docker rm puritys-vim 2>&1
        docker run -d -t --name puritys-vim  \
            -e VIM_THEME=mystyle_white \
            -v /:/src  \
            -v ~/docker_tmp:/tmp \
            -v ~/docker_tmp/.bash_history:/root/.bash_history \
            -v ~/.m2:/root/.m2 \
            -w /src$pwd \
            puritys/vim
    fi
    dockerVersion=`docker -v |grep -o "[0-9\.]*" | head -n 1`
    vercomp $dockerVersion 1.7.99999
    if [ "x2" == "x$verRet" ]; then
        command="docker exec -it puritys-vim /bin/bash ";
    else
        command="docker exec -it -w /src$pwd puritys-vim /bin/bash ";
    fi

    echo $command
    eval $command
}


vercomp () {
    if [[ $1 == $2 ]]
    then
        return 0
    fi
    local IFS=.
    local i ver1=($1) ver2=($2)
    # fill empty fields in ver1 with zeros
    for ((i=${#ver1[@]}; i<${#ver2[@]}; i++))
    do
        ver1[i]=0
    done
    for ((i=0; i<${#ver1[@]}; i++))
    do
        if [[ -z ${ver2[i]} ]]
        then
            # fill empty fields in ver2 with zeros
            ver2[i]=0
        fi
        if ((10#${ver1[i]} > 10#${ver2[i]}))
        then
            verRet=1
            return 1
        fi
        if ((10#${ver1[i]} < 10#${ver2[i]}))
        then
            verRet=2
            return 2
        fi
    done
    return 0
}
